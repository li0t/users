md-toolbar.md-padding.lightBlue(layout='row' layout-align='start end')
  div
    h2 TAREAS
    
    md-button(ng-href='/tasks/collaborator')  Mis Tareas
      
    md-button.md-raised(ng-href='/tasks/own')  Tareas Creadas

md-button.md-fab.md-warn(ng-href='/tasks/create')
  md-icon(md-font-icon='material-icons') add
      
md-content.md-padding
  md-grid-list(
    md-gutter="12px",
    md-gutter-gt-sm="8px",
    md-cols-sm="1",
    md-cols-md="2",
    md-cols-gt-lg="4",
    md-row-height="1:1")
    md-grid-tile.whitebg(
      layout='column',
      ng-repeat='task in tasks',
      md-rowspan='1',
      md-colspan='1')
      em-card(card='task' ng-click='$navigateTo("/tasks/" + task._id + "/detail")')
