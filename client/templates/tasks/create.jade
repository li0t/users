md-toolbar.md-padding.lightBlue(layout='row' layout-align='start end')
  md-button(ng-href='/')
    h2 EMEETER

  form(
    ng-submit='form.$valid && submit()',
    role='form',
    name='form')

    div.panel-body
      div.form-group
        div.input-group
          span.input-group-addon
            i.fa.fa-fw.fa-pencil

          input.form-control(
            placeholder='Objetivo',
            ng-model='data.objective',
            required)

      div.form-group
        div.input-group
          span.input-group-addon
            i.fa.fa-fw.fa-dot-circle-o

          select.form-control(
            ng-model='data.priority',
            required)

            option(value='', hidden, disabled, selected) Prioridad

            option(
              ng-repeat='priority in statics.priorities',
              label='{{ priority.name }}',
              ng-value='priority._id')
       
    div.panel-footer
      div.btn-group.btn-group-grid
        a.btn.btn-lg.btn-default(ng-href='/groups/{{session.group._id}}/tasks')
          i.fa.fa-mr.fa-chevron-left
          | Cancelar

        button.btn.btn-default.btn-lg(
          ng-disabled='form.$invalid',
          type='submit')

          | Crear
          i.fa.fa-ml.fa-chevron-right
