md-toolbar.md-padding.lightBlue(layout='row' layout-align='start end')
  div(ng-show='!fetching && group')       
    h2 {{ session.group.profile.name }}   

    div(layout='row')
      md-button.md-fab.md-warn(ng-href='/groups')
        md-icon(md-font-icon='material-icons') chevron_left
        
      md-button(ng-href='/groups/{{session.group._id}}/members')
        md-icon(md-font-icon='material-icons') group
        | Miembros
        
      md-button(ng-href='/groups/{{session.group._id}}/tasks')
        md-icon(md-font-icon='material-icons') more
        | Tareas  
      
      md-button(ng-href='/groups/{{session.group._id}}/entries/note')
        md-icon(md-font-icon='material-icons') speaker_notes
        | Notas
        
      md-button(ng-href='/groups/{{session.group._id}}/entries/document')
        md-icon(md-font-icon='material-icons') developer_board
        | Documentos  
        
      md-button(ng-href='/groups/{{session.group._id}}/entries/image')
        md-icon(md-font-icon='material-icons') image
        | Im√°genes 
      
md-content.md-padding
  md-grid-list(
    md-gutter="12px" md-gutter-gt-sm="8px"
    md-cols="4"
    md-row-height="1:1")
    
    md-grid-tile(
      md-rowspan="1"
      md-colspan="1"
      ng-repeat='entry in entries'
      ng-init='href = ("/groups/" + session.group._id + "/entries/{0}/detail" | format : entry._id)')
        md-button(ng-href='{{ href }}' aria-label="entrada")
        h3 {{ entry.title }}
