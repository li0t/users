md-toolbar.md-padding.lightBlue(layout='row' layout-align='start end')
  div(ng-show='!fetching && group')       
    h2 {{ session.group.profile.name }}   

    div(layout='row')
      md-button.md-fab.md-warn(ng-href='/groups')
        md-icon(md-font-icon='material-icons') chevron_left
        
      group-items
      
md-content.md-padding
  md-grid-list(
    md-gutter="12px",
    md-gutter-gt-sm="8px",
    md-cols-sm="1",
    md-cols-md="2",
    md-cols-gt-lg="4",
    md-row-height="1:1")
    md-grid-tile.whitebg(
      layout='column',
      ng-repeat='entry in entries',
      md-rowspan='1',
      md-colspan='1')
      em-card(card='entry' ng-click='$navigateTo("/groups/" + session.group._id + "/entries/" + entry._id + "/detail")')
