md-toolbar.md-padding.lightBlue(layout='row' layout-align='start end')
  div
    h2 {{ session.group.profile.name }}
    
    div(layout='row')
      creator
        
      group-items(ng-show='group' group)
        
md-progress-circular(ng-show='fetching' md-mode='indeterminate')        
        
md-content.md-padding(ng-show='!fetching && contacts')  
  md-input-container
    label Agrega miembros
    md-select(
      ng-change='members.add()'
      ng-model='form.member')
      
      md-option(
        ng-repeat='contact in contacts'
        value='{{ $index }}')
        | {{ contact.user.email }}
  
  div(layout='row')
    md-button(
      ng-disabled='!members.list.length'
      ng-click='submit()')
      
      | Listo
      md-icon(md-font-icon='material-icons') check
      
  md-button.md-raised(ng-repeat='member in members.list')
    | {{ member.user.email }}
    md-icon(md-font-icon='material-icons' ng-click='members.remove($index)') close
