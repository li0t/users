md-toolbar.md-padding.lightBlue(layout='row' layout-align='start end')
  md-button(ng-href='/')
    h2 EMEETER
      
md-content
  div(layout='row')
    md-button.md-fab.md-warn(ng-href='/groups/{{session.group._id}}/tasks')
      md-icon(md-font-icon='material-icons') chevron_left
          
  div.panel-body.text-center(ng-show='fetchingTask && !task')
    h4
      i.fa.fa-mr.fa-circle-o-notch.fa-spin
      | Recopilando Informaci√≥n
      
  div.panel-body.text-center(ng-show='!fetchingTask && task')
    div.row
        button.btn.btn-default.btn-lg(
          ng-show='task.completed',
          ng-click='reOpen()')
          | Abrir
          
        button.btn.btn-default.btn-lg(
          ng-show='!task.completed',
          ng-click='close()')
          | Cerrar    
        
    div.row
      h4 {{ task.completed && "Completada" || "Abierta"}}
      h3 {{ task.objective }}
    
    div.row(ng-show='!task.collaborators.length')
      p No hay collaboradores asignados
    
    div.row(ng-show='task.collaborators.length')
      p Collaboradores:  
    
    div.row(ng-repeat='collaborator in task.collaborators')
      p {{ collaborator.user.email }}
      
    div.row(ng-show='!task.notes.length')
      p No hay notas
    
    div.row(ng-show='task.notes.length')
      p Notas:
    
    div.row
      div.col-sm-4(ng-repeat='note in task.notes', ng-show='task.notes.length')
        p {{ note.note }}
              
      
  
