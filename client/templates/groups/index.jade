md-progress-circular.main-display(ng-show='fetching' md-mode='indeterminate')           
        
md-content.main-display.md-padding(ng-show='!fetching && groups')

  .em-table(flex)
    .em-thead
      .em-tr(layout='row', layout-align='center end')
        .em-th(flex='10')
          p 
        .em-th(flex)
          p Nombre 
            md-icon.sort(ng-click='doSomething()', md-font-icon='material-icons') filter_list
        .em-th(flex)
          p Administrador 
            md-icon.sort(ng-click='doSomething()', md-font-icon='material-icons') filter_list
        .em-th(flex)
          p Última actualización 
            md-icon.sort(ng-click='doSomething()', md-font-icon='material-icons') filter_list
        .em-th(flex)
          p Actividad
    .em-tbody
      .em-tr(
            layout='row', layout-align='center end'
            ng-repeat='group in groups',
            ng-init='href = ("/groups/{0}/profile" | format : group._id)')
        .em-td.fab-image(flex='10')
          md-button.md-fab.md-primary.md-hue-3(ng-href='{{ href }}' aria-label="grupo")
        .em-td(flex)
          a(ng-href='{{ href }}' aria-label="grupo") {{ group.profile.name }}
        .em-td(flex)
          a(ng-href='{{ href }}' aria-label="grupo") {{ group.admin.profile.name || group.admin.email }}
        .em-td(flex)
          a(ng-href='{{ href }}' aria-label="grupo") {{ group.updated | toLocal }}
        .em-td(flex)
          a(ng-href='{{ href }}' aria-label="grupo") {{ group.members.length }}

  div(ng-show='!groups.length')
    md-icon(md-font-icon='material-icons') panorama_fish_eye
    | No hay grupos
