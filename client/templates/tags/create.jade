md-toolbar.md-padding.lightBlue(layout='row' layout-align='start end')
  div
    h2 TAGS
    
    creator
      
md-content.md-padding
  form(
    ng-submit='submit()'
    name='form'
    role='form'
    novalidate)
    

    md-autocomplete(
      md-selected-item-change="searchByTag(selectedTag)"
      md-search-text-change="searchTextChange(text)"
      placeholder="Busca o crea un nuevo tag"
      md-items='tag in searchTags(text)'
      md-selected-item='selectedTag'
      md-search-text='text'
      md-autoselect='true'
      md-item-text='tag')
      
      span(md-highlight-text='text') {{ tag }}
    md-tooltip Un tag puede servirte para identificar un proyecto o tarea    
      
    md-button(
      ng-disabled='selectedTag || !text || submitting'
      type='submit') crear
      
    
  md-progress-circular(ng-show='searching' md-mode='indeterminate')  
  
  md-grid-list(
    ng-show='entries',
    md-gutter="12px",
    md-gutter-gt-sm="8px",
    md-cols-sm="1",
    md-cols-md="2",
    md-cols-gt-lg="4",
    md-row-height="1:1")
    md-grid-tile.whitebg(
      layout='column',
      ng-repeat='entry in entries',
      md-rowspan='1',
      md-colspan='1')
      em-card(card='entry')
        
