div.panel.panel-default
  div.panel-heading
    h3.panel-title
      i.fa.fa-mr.fa-th-large
      | Entradas 
      
  div.panel-body
    a.btn.btn-block.btn-lg.btn-default(ng-href='/entries')
      i.fa.fa-mr.fa-user
      | Volver 
          
  div.panel-body.text-center(ng-show='fetching && !entry')
    h4
      i.fa.fa-mr.fa-circle-o-notch.fa-spin
      | Recopilando Informaci√≥n
      
  div.panel-body.text-center(ng-show='!fetching && entry')
    h3 {{entry.title}}
    p {{entry.content}}
    
    div.row(ng-show='entry.tags.length')
      p Tags:
    
    div.row
      div.col-sm-4(ng-repeat='tag in entry.tags', ng-show='entry.tags.length')
        p {{ tag }}
              
    div.row
      div.col-sm-4(ng-show='entry.pictures.length', ng-repeat='picture in entry.pictures', ng-show='entry.pictures.length', ng-init='href = ("/api/files/{0}" | format : picture._id)')
        img(src='{{ href }}', style="max-heigth: 200px; max-width:200px;")
