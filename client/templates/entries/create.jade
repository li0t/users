div.container
  div.row
    div.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      div.page-header
        h1 Crear entrada
        
        
      div.panel.panel-default
        div.panel-heading
          h3.panel-title
            i.fa.fa-mr.fa-fw.fa-pencil
            | Datos de la cuenta

        form(
          ng-submit='form.$valid && submit()',
          name='form',
          role='form',
          novalidate)

          md-input-container.form-group
            input.form-control(
              placeholder='Ingresa tu email',
              ng-model='data.email',
              type='text',
              required)
                
          div.form-group
            md-input-container.input-group
              span.input-group-addon
                i.fa.fa-fw.fa-asterisk

              input.form-control(
                placeholder='Ingresa tu clave',
                ng-model='data.password',
                ng-minlength='4',
                type='text',
                required)

          div.panel-footer.text-right
            div.btn-group-grid
              a.btn.btn-lg.btn-default(ng-href='/entries')
                i.fa.fa-mr.fa-fw.fa-chevron-left
                | Cancelar

              button.btn.btn-lg.btn-main.btn-default(
                ng-disabled='form.$invalid',
                type='submit')

                i.fa.fa-mr.fa-fw.fa-check
                | Crear entrada
