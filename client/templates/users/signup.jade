div.container
  div.row
    div.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      div.page-header
        h1 Crear cuenta

      div.panel.panel-default
        div.panel-heading
          h3.panel-title
            i.fa.fa-mr.fa-fw.fa-pencil
            | Datos de la cuenta

        form(
          ng-submit='form.$valid && submit()',
          name='form',
          role='form',
          novalidate)

          div.panel-body
            div.form-group
              div.input-group
                span.input-group-addon
                  i.fa.fa-at.fa-fw

                input.form-control(
                  placeholder='Ingresa tu email',
                  ng-model='data.email',
                  type='email',
                  required)

            div.form-group
              div.input-group
                span.input-group-addon
                  i.fa.fa-fw.fa-asterisk

                input.form-control(
                  placeholder='Ingresa tu clave',
                  ng-model='data.password',
                  ng-minlength='4',
                  type='password',
                  required)

          div.panel-footer.text-right
            div.btn-group-grid
              a.btn.btn-lg.btn-default(ng-href='/')
                i.fa.fa-mr.fa-fw.fa-chevron-left
                | Ya tengo una cuenta

              button.btn.btn-lg.btn-main.btn-default(
                ng-disabled='form.$invalid',
                type='submit')

                i.fa.fa-mr.fa-fw.fa-check
                | Crear cuenta
