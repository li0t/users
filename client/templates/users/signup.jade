div.container
  div.row
    div.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      div.page-header
        h1 Crear cuenta

      div.panel.panel-default
        div.panel-heading
          h3.panel-title
            i.fa.fa-mr.fa-fw.fa-pencil
            | Datos de la cuenta

        form(
          ng-submit='form.$valid && submit()',
          name='form',
          role='form',
          novalidate)

          div.panel-body
            div.form-group
              div.input-group
                span.input-group-addon
                  i.fa.fa-user.fa-fw

                input.form-control(
                  placeholder='Ingresa tu nombre',
                  ng-model='data.name',
                  type='text',
                  required)

            div.form-group
              div.input-group
                span.input-group-addon
                  i.fa.fa-at.fa-fw

                input.form-control(
                  placeholder='Ingresa tu email',
                  ng-model='data.email',
                  type='email',
                  required)

            div.form-group
              div.input-group
                span.input-group-addon
                  i.fa.fa-fw.fa-asterisk

                input.form-control(
                  placeholder='Ingresa tu clave',
                  ng-model='data.password',
                  ng-minlength='4',
                  type='password',
                  required)

            div.checkbox(class='{{ form.specialist && "form-group" || "" }}')
              label.control-label.input-group
                input.hidden(
                  ng-model='form.specialist',
                  type='checkbox')

                span.input-group-addon
                  i(class='fa fa-fw fa-{{ form.specialist && "check-square" || "square-o" }}')

                span.form-control Soy m√©dico especialista

            div.input-group(ng-show='form.specialist')
              span.input-group-addon
                i.fa.fa-fw.fa-user-md

              select.form-control(
                ng-disabled='!form.specialist',
                ng-model='data.specialty')

                option(value='', hidden, disabled, selected) Elije una especialidad

                option(
                  ng-repeat='specialty in specialties track by specialty.id',
                  label='{{ specialty.name }}',
                  ng-value='specialty.id')

          div.panel-footer.text-right
            div.btn-group-grid
              a.btn.btn-lg.btn-default(ng-href='/')
                i.fa.fa-mr.fa-fw.fa-chevron-left
                | Ya tengo una cuenta

              button.btn.btn-lg.btn-main.btn-default(
                ng-disabled='form.$invalid',
                type='submit')

                i.fa.fa-mr.fa-fw.fa-check
                | Crear cuenta
