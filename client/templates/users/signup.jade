div.row
  div.col-md-4.col-md-offset-4
    div.panel.panel-default
      div.panel-heading
        h3.panel-title
          i.fa.fa-pencil
          |  Sign Up

      form(
        ng-submit='form.$valid && submit()',
        name='form',
        role='form',
        novalidate)

        div.panel-body
          div.form-group
            div.input-group
              span.input-group-addon
                i.fa.fa-fw.fa-user

              input.form-control(
                placeholder='Type your name',
                ng-model='form.name',
                type='text',
                required)

          div.form-group
            div.input-group
              span.input-group-addon
                i.fa.fa-fw.fa-at

              input.form-control(
                placeholder='Type your email',
                ng-model='form.email',
                type='email',
                required)

          div.form-group
            div.input-group
              span.input-group-addon
                i.fa.fa-fw.fa-asterisk

              input.form-control(
                placeholder='Type a password',
                ng-model='form.password',
                ng-minlength='4',
                type='password',
                required)

          div.input-group
            span.input-group-addon
              i.fa.fa-fw.fa-venus-mars

            select.form-control(
              ng-options='gender.name for gender in statics.genders track by gender._id',
              ng-init='form.gender = statics.genders[0]'
              ng-model='form.gender',
              required)

        div.panel-footer.text-right
          a.btn.btn-link.pull-left(ng-href='/users/signin') I have an account

          button.btn.btn-primary(
            ng-disabled='form.$invalid || submitting',
            type='submit')

            i.fa(class='{{ submitting && "fa-circle-o-notch fa-spin" || "fa-pencil" }}')
            |  Sign Up
