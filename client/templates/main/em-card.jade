span(layout='column', layout-align='center center', style="color: #747474;")
  md-grid-tile-header(style="background: none; color: #747474;")
    
  div(layout='column', layout-align='center center', style='cursor: pointer;', ng-click='card.action()')
    md-icon.icon48(md-font-icon='material-icons', style="color: {{ card.color }};") {{ card.icon }}
    h4(style='text-align: center;')
      span(style='text-transform: uppercase;')
        | {{ card.span }}
      br
      span(style='font-size: small;')
        | {{ card.relevantDate && (card.relevantDate | fromNow) || 'Sin Fecha de Entrega'}}
      br
      span(style='font-size: small;')
        | {{ card.completed && 'Completada'}}

  md-button.md-icon-button(aria-label='emcard-detail' ng-href='{{ card.href }}')
    md-icon(md-font-icon='material-icons' ng-if='card._id') launch
    md-icon(md-font-icon='material-icons' ng-if='!card._id' style='size:48px') add
    md-tooltip {{ (card._id && "Ver detalle") || "Crear" }}    
    
md-grid-tile-footer(layout-padding, layout-align='center center', style="background: none; color: #747474;")  
  p(style='font-size: small;') {{ card.footer }}
  
