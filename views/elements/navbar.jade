nav.navbar.navbar-inverse.navbar-static-top(
  ng-controller='Navbar',
  role='navigation')

  div.container-fluid
    div.navbar-header
      button.navbar-toggle.collapsed(
        type='button',
        data-toggle='collapse',
        data-target='#navbar-collapse')

        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar

      a.navbar-brand(ng-href='/{{ session.user && "dashboard" || "" }}')
        i.fa.fa-circle-o
        |  #{title}

    div.collapse.navbar-collapse#navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li(ng-show='session.user')
          a(href ng-click='signout()')
            i.fa.fa-sign-out
            |  Sign Out

        li
          a(ng-href='/help')
            i.fa.fa-life-ring
            |  Help
