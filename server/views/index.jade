- var suffix = development ? '' : '.min';

doctype html

html(
  ng-app='App',
  lang='es')

  head
    include ./elements/head

  body(layout='row')
    md-sidenav.md-sidenav-left.md-whiteframe-z4(
      ng-if='!showDetails',
      md-is-locked-open='$mdMedia("gt-sm")',
      md-component-id='left',
      main-sidebar)

    md-content(
      layout='column',
      tabIndex='-1',
      role='main',
      flex)

      md-toolbar(main-navbar)

      md-content.main-background(
        autoscroll='true',
        ng-view,
        flex)

    details-sidenav(flex='30', ng-if='showDetails')
          
    include ./elements/scripts
